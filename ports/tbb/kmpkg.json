{
  "$schema": "https://raw.githubusercontent.com/microsoft/kmpkg-tool/main/docs/kmpkg.schema.json",
  "name": "tbb",
  "version": "2022.2.0",
  "description": "Intel's Threading Building Blocks.",
  "homepage": "https://github.com/oneapi-src/oneTBB",
  "license": "Apache-2.0",
  "supports": "!uwp",
  "dependencies": [
    {
      "name": "kmpkg-cmake",
      "host": true
    },
    {
      "name": "kmpkg-cmake-config",
      "host": true
    }
  ],
  "default-features": [
    {
      "name": "hwloc",
      "platform": "!static & !osx & !uwp"
    }
  ],
  "features": {
    "hwloc": {
      "description": "Builds TBB with TBBBind support for Hybrid CPUs or NUMA architectures.",
      "supports": "!static & !osx & !uwp",
      "dependencies": [
        "hwloc"
      ]
    }
  }
}
